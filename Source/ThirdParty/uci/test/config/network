# Exact-mapping view
# Each view has ID, default profile and a list of groups and profiles.
config ClsfView view1
	option	ID						1
	list	Groups					group1
	list	Profiles				profile1
	list	Profiles				profile2
	option	DefaultProfile			profile3

# Loose-mapping view with a list of mapping fields.
#	SRC_IP		= 0x1
#	DST_IP		= 0x2
#	SRC_PORT	= 0x4
#	DST_PORT	= 0x8
#	DSCP		= 0x10
#	PROTO		= 0x20
#	L7RULE		= 0x40
config ClsfView view2
	option	ID						2
	option	LooseMapping			3		# SRC_IP | DST_IP

# Group has the same configurable options of profiles.
# and a list of profiles.
config ClsfGroup group1
	option	ID						1
	list	Profiles				profile4
	list	Profiles				profile5
	option	Action					8
	option	Priority				'2 2'
#	...

# A complete list of profile options.
config ClsfProfile profile1
	option	ID						101
	option	Action					1
	option	ActionExclude			0
	option	Dscp					0
	option	Priority				'3 3'
	option	PriorityGurantee		'4 4'
	option	BwGurantee				'512 512'
	option	BwMax					'1000 1000'
	option	BwMaxHost				'800 800'
	option	HostFairMaxTcpAccSess	256
	option	HostFairMaxTcpActSess	512
	option	HostFairMaxUdpSess		256
	list	SrcIpFilter				'10.10.10.1 10.10.10.10'
	list	DstPortFilter			'80 80'
#	list	DstIpFilter				'20.20.20.1 20.20.20.10'
#	list	ProtoFilter				6
#	list	DscpFilter				0
#	list	SrcPortFilter			'80 80'
#	option	L7Filter				102			# QQXuanFeng

# Unconfigured options will be default to 0.
config ClsfProfile profile2
	option	ID						102
	option	Action					4
	option	Dscp					1
	option	Priority				'3 3'
	option	HostFairMaxTcpAccSess	256
	option	HostFairMaxTcpActSess	512
	option	HostFairMaxUdpSess		256
	list	DstIpFilter				'20.20.20.1 20.20.20.10'

# Options for default profile.
config ClsfProfile profile3
	option	ID						0
	option	Dscp					0
	option	Priority				'1 1'
	option	Action					0
	list	ProtoFilter				1

config ClsfProfile profile4
	option	ID						104
	list	DstIpFilter				'20.20.20.1 20.20.20.10'
	list	DstPortFilter			'80 80'

config ClsfProfile profile5
	option	ID						105
	list	ProtoFilter				17
